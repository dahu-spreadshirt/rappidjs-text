<ui:SvgTextAreaClass xmlns:ui="text.ui" xmlns="http://www.w3.org/2000/svg"
                     onpointermove="_onTextAreaMove">
    <g cid="selectionGroup" style="opacity: 0.8;" visible="{showSelection}"/>
    <rect cid="cursor" width="1" height="10" class="text-cursor"/>
    <rect cid="anchor" visible="false" width="1" height="10" class="text-anchor" />

    <text cid="text" text-rendering="geometricprecision"
          xml:space="preserve"
          onpointerup="_onTextMouseUp"
          onpointerdown="_onTextMouseDown" onpointermove="_onTextMouseMove"/>
</ui:SvgTextAreaClass>